<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title><%-title%></title>
    <link href="../plugins/site/1.1/release/framework.min.css" rel="stylesheet" type="text/css" />
	<link href="../plugins/site/site.css" rel="stylesheet" type="text/css" />		
	<link rel="stylesheet" href="../plugins/asyncBox/skins/Chrome/asyncbox.css" />
    <style type="text/css">

	</style>
</head>
<body>
<div class="w_wrapper1">
	<div class="w_header">
	</div>
	<div class="w_content">	
		<div class="w_inputAreaA" style="margin:0 auto;width:600px;">
			<table class="u_tableA">
				<tr>
					<td><label for="userid">用户名</label></td>
					<td><input type="text" class="w_text" id="username" /></td>
				</tr>
				<tr>
					<td><label for="pass">密码</label></td>
					<td><input type="password" class="w_text" id="pass" /></td>
				</tr>
				<tr>
					<td></td>
					<td><input type="button" class="w_buttonA" id="login" value="登陆"/></td>
				</tr>
			</table>
		</div>
	</div>
	<div class="w_footer">
	</div>
</div>
<script src="../plugins/jquery-1.3.2.js" type="text/javascript"></script>
<script src="../plugins/site/site.js" type="text/javascript"></script>
<script src="../plugins/calendar/calendar.js" type="text/javascript"></script>
<script type="text/javascript" src="../plugins/asyncBox/asyncbox.js"></script>
<script type="text/javascript">
$(function(){
	$('#login').click(function(){
		var name=$('#username').val();
		var pass=$('#pass').val();
		if(name==''){
			tip('用户名不能为空！');
			return;
		}
		if(pass==''){
			tip('密码不能为空！');
			return;
		}		
		var pms={username:name,password:pass};
		$.post('dologin',pms,function(json){
			json=fnJSON(json);
			if(!json.err){
				location.href='index';
			}else{
				tip(json.err);
			}
		});
	});
	$('.w_text').keyup(function(e){
		if(e.keyCode==13){
			$('#login').click();		
		}
	});
});
</script>
</body>
</html>
